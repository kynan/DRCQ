template(name='Home')
  .header
    .rounded
      h3 DRCQ - Disaster Recovery Communication Coordination
      h1
        a(href='http://drcq.meteor.com') http://drcq.meteor.com

  div.map(id='map')

  if addMarker
    .footer
      .rounded
        p Add new marker at {{round addMarker.lat}}, {{round addMarker.lng}}
        p Resource:
          each categories
            img.marker(src='{{resource}}', category='{{category}}', type='resource', title='{{category}}')
        p Need:
          each categories
            img.marker(src='{{need}}', category='{{category}}', type='need', title='{{category}}')
